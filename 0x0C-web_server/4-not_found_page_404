#!/usr/bin/env bash
# This script installs Nginx, configures a custom 404 page, and ensures the page contains the string "Ceci n'est pas une page"

# Update the package list
sudo apt-get update

# Install Nginx
sudo apt-get install -y nginx

# Ensure the ubuntu user owns /var/www
sudo chown -R ubuntu /var/www

# Create a custom 404 page with the required content
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Configure Nginx to use the custom 404 page
CONFIG_FILE="/etc/nginx/sites-available/default"
CUSTOM_404="\\\terror_page 404 /404.html;"

# Insert the custom 404 configuration in the server block
sudo sed -i "/server_name _;/a $CUSTOM_404" "$CONFIG_FILE"

# Restart Nginx to apply the changes
sudo service nginx restart
