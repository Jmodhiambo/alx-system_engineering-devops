#!/usr/bin/env bash
# This script modifies the /etc/hosts file to change the IP address of localhost to 127.0.0.2
# and resolves facebook.com to 8.8.8.8.

# Backup the /etc/hosts file before making changes
cp /etc/hosts /etc/hosts.bak

# Modify localhost to resolve to 127.0.0.2
sed -i 's/^127.0.0.1\s\+localhost$/127.0.0.2 localhost/' /etc/hosts

# Modify facebook.com to resolve to 8.8.8.8
sed -i 's/^[^#]*facebook.com\s\+.*$/8.8.8.8 facebook.com/' /etc/hosts

# Output the current /etc/hosts file for verification
echo "Current /etc/hosts file:"
cat /etc/hosts
